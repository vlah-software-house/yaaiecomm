# ForgeCommerce — Kubernetes Deployment Secrets
# Copy to .secrets and fill in real values.
# NEVER commit .secrets to git.

# ── PostgreSQL Setup (for deploy scripts / migration jobs) ──
POSTGRES_HOST=
POSTGRES_PASSWORD=

# ── Go API Server ───────────────────────────────────────────
DATABASE_URL=postgres://forge:changeme@pg-host:5432/forgecommerce?sslmode=require
SESSION_SECRET=
JWT_SECRET=
PORT=8080
ADMIN_PORT=8081
BASE_URL=https://store.example.com
ADMIN_URL=https://admin.example.com
TOTP_ISSUER=ForgeCommerce

# ── Stripe ──────────────────────────────────────────────────
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
STRIPE_PUBLIC_KEY=

# ── Storage ─────────────────────────────────────────────────
# Set MEDIA_STORAGE=s3 for S3-compatible object storage (CEPH, MinIO).
# Set MEDIA_STORAGE=local for local filesystem (dev only).
MEDIA_STORAGE=s3
MEDIA_PATH=/app/media

# ── S3 Object Storage (CEPH) ───────────────────────────────
S3_ENDPOINT=https://s3.your-ceph-provider.com
S3_ACCESS_KEY_ID=
S3_SECRET_ACCESS_KEY=
S3_REGION=us-east-1
S3_FORCE_PATH_STYLE=true
S3_PUBLIC_BUCKET=forgecommerce-media
S3_PUBLIC_BUCKET_URL=https://media.store.example.com
S3_PRIVATE_BUCKET=forgecommerce-private

# ── Email ───────────────────────────────────────────────────
SMTP_HOST=
SMTP_PORT=1025
SMTP_FROM=store@forgecommerce.local

# ── VAT (defaults are fine for staging) ─────────────────────
VAT_SYNC_ENABLED=true
VAT_SYNC_CRON=0 0 * * *
VAT_TEDB_TIMEOUT=30s
VAT_EUVATRATES_FALLBACK_URL=https://euvatrates.com/rates.json
VIES_TIMEOUT=10s
VIES_CACHE_TTL=24h

# ── Storefront (Nuxt 3) ────────────────────────────────────
NUXT_PUBLIC_API_BASE=http://api:8080

# ── Playwright E2E ──────────────────────────────────────────
STOREFRONT_URL=https://store.example.com
API_URL=https://store.example.com
ADMIN_EMAIL=admin@forgecommerce.local
ADMIN_PASSWORD=admin123
CI=true
